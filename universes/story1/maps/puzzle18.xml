                "overview": "Carefully move the small platform through the level to collect all of the gold.",
                "tooltip": "Look at the crates as places where you should move the platform.",
                "prizes.warehouses": ["puzzle1"],
                "prizes.min-quality": 1,
                "prizes.max-quality": 1,
                "prizes.required-item-names": ["running-shoes"]
            })

            .setWaveAllowances({
                "bombs": 0
            });

        showPuzzleIntro();
	</script>
	<script name = 'shift1.shift.x'>
		if ( npc("lever.x").hasPosition("left") )
        {
            npc("lever.x").setPosition("right");
            map().plane("shift1").shiftToX("shift1.x2", 3.0);
        }

        else
        {
            npc("lever.x").setPosition("left");
            map().plane("shift1").shiftToX("shift1.x1", 3.0);
        }
	</script>
	<script name = 'shift1.shift.y'>
		if ( npc("lever.y").hasPosition("up") )
        {
            npc("lever.y").setPosition("down");
            map().plane("shift1").shiftToY("shift1.y2", 3.0);
        }

        else
        {
            npc("lever.y").setPosition("up");
            map().plane("shift1").shiftToY("shift1.y1", 3.0);
        }
	</script>
