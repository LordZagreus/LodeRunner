<parameters>
	<data>
		<parameter>@x</parameter>
		<parameter>@y</parameter>
		<parameter>@width</parameter>
		<parameter>@height</parameter>
	</data>
	<text>
		
	</text>
</parameters>

<template name = 'universeselector.backdrop' version = 'singleplayer'>

    <rowmenu id = 'menu' class = 'main-menu' x = '@x' y = '@y' width = '@width' height = '@height'>

        <item-group class = 'backdrop' render-border = '1' uses-title-bar = '1'>

            <item disabled = '1' class = 'title-bar' fill = 'always'>
                <icon x = '15' y = '50%' valign = 'center' index = '30' position = 'absolute' />
                <label font = 'high-contrast' x = '50' y = '0' width = '90%' value = 'Select your Story...' />
            </item>

            <xitem disabled = '1'>
                <rect class = 'contrast-separator' x = '0' y = '0' width = '100%' height = '2' midpoint = '0.25' />
            </xitem>

        </item-group>

        <item-group class = 'backdrop'>

            <item>
                <label x = '98%' y = '0' align = 'right' width = '100%' value = 'single player mode' />
            </item>

        </item-group>

    </rowmenu>

</template>


<template name = 'universeselector.backdrop' version = 'multiplayer'>

    <rowmenu id = 'menu' class = 'main-menu' x = '@x' y = '@y' width = '@width' height = '@height'>

        <item-group class = 'backdrop' render-border = '1' uses-title-bar = '1'>

            <item disabled = '1' class = 'title-bar' fill = 'always'>
                <icon x = '15' y = '50%' valign = 'center' index = '30' position = 'absolute' />
                <label font = 'high-contrast' x = '50' y = '0' width = '90%' value = 'Select a Level Set...' />
            </item>

            <xitem disabled = '1'>
                <rect class = 'contrast-separator' x = '0' y = '0' width = '100%' height = '2' midpoint = '0.25' />
            </xitem>

        </item-group>

        <item-group class = 'backdrop'>

            <item>
                <label x = '98%' y = '0' align = 'right' width = '100%' value = 'cooperative mode' />
            </item>

        </item-group>

    </rowmenu>

</template>
