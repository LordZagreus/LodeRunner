<parameters>
	<data>
		<parameter>@x</parameter>
		<parameter>@y</parameter>
		<parameter>@width</parameter>
		<parameter>@height</parameter>
	</data>
	<text>
		
	</text>
</parameters>

<template name = 'linear.menu.pause'>

    <rowmenu id = 'menu' x = '@x' y = '@y' width = '@width' height = '@height' halign = 'right' valign = 'center' shrinkwrap = '1' uses-focus = '1'>

        <item-group class = 'spacer' render-border = '1' uses-title-bar = '1'>

            <item disabled = '1' class = 'title-bar' fill = 'always'>
                <icon x = '5%' y = '50%' valign = 'center' index = '27' position = 'absolute' />
                <label font = 'high-contrast' x = '17%' y = '0' width = '80%' value = 'Game Menu' />
            </item>

        </item-group>

        <item-group class = 'options' render-border = '1'>

            <item class = 'option' fill = 'active'>

                <icon class = 'lode-runner' x = '5%' y = '50%' valign = 'center' index = '30' display = 'on-focus' position = 'absolute' />

                <stack>
                    <label x = '17%' y = '0' width = '90%' value = 'Resume Game' />
                    <label class = 'subtitle' x = '17%' y = '0' width = '90%' value = 'Continue Level' />
                </stack>

                <action do = 'resume-level' />

            </item>

            <item class = 'option' fill = 'active'>
                <contents>

                    <icon class = 'lode-runner' x = '5%' y = '50%' valign = 'center' index = '30' display = 'on-focus' position = 'absolute' />

                    <stack>
                        <label x = '17%' y = '0' width = '90%' value = 'Retry Level' />
                        <label class = 'subtitle' x = '17%' y = '0' width = '90%' value = 'Start from the beginning' />
                    </stack>

                    <action do = 'retry-level' />

                </contents>
                <tooltip render-border = '1'>
                    <label x = '0' y = '0' width = '100%' value = 'You can retry the level as many times as you wish.' />
                </tooltip>
            </item>

            <item class = 'option' fill = 'active'>
                <contents>

                    <icon class = 'lode-runner' x = '5%' y = '50%' valign = 'center' index = '30' display = 'on-focus' position = 'absolute' />

                    <stack>
                        <label x = '17%' y = '0' width = '90%' value = 'Quit' />
                        <label class = 'subtitle' x = '17%' y = '0' width = '90%' value = 'Return to [color=special]Main Menu[/color]' />
                    </stack>

                    <action do = 'leave-level' />

                </contents>
                <tooltip render-border = '1'>
                    <label x = '0' y = '0' width = '100%' value = 'Exit the game and return to the level selection screen.' />
                </tooltip>
            </item>

        </item-group>

    </rowmenu>

</template>
